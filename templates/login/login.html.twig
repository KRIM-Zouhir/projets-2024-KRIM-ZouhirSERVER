{# login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-form">
        <div class="auth-header">
            <h1>Welcome Back</h1>
            <p>Please sign in to continue</p>
        </div>

        <form method="post" action="{{ path('app_login') }}" class="login-form">
            {% if error %}
                <div class="alert alert-danger animate-shake">
                    {{ error|trans({}, 'security') }}
                </div>
            {% endif %}

            <div class="form-group">
                <input type="text" 
                       name="_username" 
                       id="username" 
                       value="{{ last_username }}" 
                       required 
                       class="form-control {% if error %}is-invalid{% endif %}"
                       placeholder="Email or Username">
                <label for="username" class="floating-label">Email or Username</label>
            </div>

            <div class="form-group">
                <input type="password" 
                       name="_password" 
                       id="password" 
                       required 
                       class="form-control {% if error %}is-invalid{% endif %}"
                       placeholder="Password">
                <label for="password" class="floating-label">Password</label>
                <button type="button" class="password-toggle">
                    <i class="fas fa-eye"></i>
                </button>
            </div>

            <button type="submit" class="auth-btn">
                <span>Sign In</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            <div class="auth-links">
                <a href="{{ path('app_forgot_password') }}" class="forgot-link">
                    Forgot Password?
                </a>
                <span class="divider">â€¢</span>
                <a href="{{ path('app_register') }}" class="register-link">
                    Create Account
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/auth/login.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/auth.js') }}"></script>
{% endblock %}
