<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TalkSphere{% endblock %}</title>
    <!-- Bootstrap CDN for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" href="images/icone.png" type="image/x-icon">
    <style>
        /* Add space below the navbar */
        .main-content {
            margin-top: 100px; /* Adjust this value as needed */
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    {% include 'navbar.html.twig' %}


    <!-- Main Content -->
    <div class="container main-content">
        {% block body %}{% endblock %}
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
    <script src="{{ asset('js/theme.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('styles/create.css') }}">
    <script src="{{ asset('js/create.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('styles/profile.css') }}">
    <script src="{{ asset('js/profile.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('styles/navbar.css') }}">
    <script src="{{ asset('js/navbar.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <script src="{{ asset('js/login.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
    <script src="{{ asset('js/register.js') }}"></script>
</body>
</html>
