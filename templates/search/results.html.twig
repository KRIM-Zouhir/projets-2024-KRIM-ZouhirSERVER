{% extends 'base.html.twig' %}

{% block body %}
    <h1>Search Results for "{{ query }}"</h1>

    {% if results is empty %}
        <p>No results found for your search.</p>
    {% else %}
        <ul>
            {% for result in results %}
                <li>
                    <a href="{{ path('app_topic_show', { 'id': result.id }) }}">
                        {{ result.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
